generator client {
  provider = "prisma-client-js"
  //output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id
  password String
}

model Node {
  id     Int    @id @default(autoincrement())
  userID String
  name   String
  weight Float

  @@unique([userID, name])
  @@index([userID])
}

model Edge {
  id              Int    @id @default(autoincrement())
  userID          String
  startPoint      String
  endPoint        String
  weight          Float
  sentiment_score Float
  sentiment_label String

  @@unique([userID, startPoint, endPoint])
}

model News {
  id          Int    @id @default(autoincrement())
  userID      String
  startPoint  String
  endPoint    String
  pubDate     String
  link        String
  title       String
  description String
}
